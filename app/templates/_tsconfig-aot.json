{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "moduleResolution": "node",
        "declaration": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "stripInternal": true,
        "outDir": "./dist",
        "rootDir": <%- (skipStyles) ? '"./src"' : '"./dist/inlined"' %>,
        "sourceMap": true,
        "inlineSources": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "files": [
        <%- (skipStyles) ? '"./src/index.ts"' : '"./dist/inlined/index.ts"' %>
    ],
    "exclude": [
        "node_modules",
        "dist",
        "demo",
        "config",
        "coverage",
        "src/**/*.spec.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true
    }
}
